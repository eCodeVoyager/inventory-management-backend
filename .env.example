# Database Configuration
MONGO_URI=mongodb://localhost:27017/searlo

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Custom Search API Configuration
GOOGLE_API_KEY=your_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# Google X-ray Service Configuration (Optional - uses defaults if not set)
GOOGLE_MAX_REQUESTS_PER_DAY=100
GOOGLE_MAX_REQUESTS_PER_SECOND=10
GOOGLE_DEFAULT_RESULTS=10
GOOGLE_MAX_RESULTS=10
GOOGLE_REQUEST_TIMEOUT=10000
GOOGLE_REQUEST_RETRIES=3
GOOGLE_RETRY_DELAY=1000

# Google X-ray Cache Configuration
GOOGLE_CACHE_ENABLED=false
GOOGLE_CACHE_TTL=3600

# Google X-ray Logging Configuration
GOOGLE_LOG_LEVEL=info
GOOGLE_ENABLE_REQUEST_LOGGING=false
GOOGLE_ENABLE_ERROR_LOGGING=true

# Google X-ray Feature Flags
GOOGLE_ENABLE_SPELL_CHECK=true
GOOGLE_ENABLE_BATCH_SEARCH=true
GOOGLE_ENABLE_ANALYTICS=true
GOOGLE_ENABLE_AUTOCOMPLETE=false

# Server Configuration
PORT=5000
NODE_ENV=development